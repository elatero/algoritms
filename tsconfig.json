{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    // "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "pretty": true,
    // "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@tests/*": ["tests/*"],
      "@config/*": ["config/*"],
      "@schema/*": ["src/schema/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@app/*": ["src/*"],
      "@root/*": ["."]
    },
    "lib": ["es6"],
    "typeRoots": ["./src/types.ts", "./node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // "isolatedModules": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./"],
  "exclude": [".idea", ".vscode", "dist", "node_modules", "voidedTests"]
}